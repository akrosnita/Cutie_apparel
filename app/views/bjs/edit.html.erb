<h1>Editing <%= @bj.name %></h1>
<% form_for(@bj,:url=>{:action=>'update'}) do |f| %>
	<%= f.error_messages %>
  <p><b>Name</b><br /><%= f.text_field :name %></p>
  <p><b>Price</b><br /><%= f.text_field :price %></p>
  <p><b>Color</b><br /><%= f.text_field :color %></p>
  <p><b>Size</b><br /><%= f.text_field :size %></p>
  <p><b>Description</b><br /><%= f.text_area :description %></p>
  <p><b>Image File Name</b><br /><%= f.text_field :img_file %></p>
  <p><%= f.submit "Update" %></p>
<% end %>